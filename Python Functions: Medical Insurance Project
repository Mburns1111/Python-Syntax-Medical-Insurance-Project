#adding a new definition to tell the difference between the the costs.
def dif_in_cost(cost_of_1, cost_of_2, name_1, name_2):
  dif = cost_of_1 - cost_of_2
  dif_message = "The difference between " + name_1 + " and " + name_2 + " is " + str(dif) + " dollars"
  return dif, dif_message

#adding a new call of the function
maria_omar_dif, maria_omar_message = dif_in_cost(maria_insurance_cost, omar_insurance_cost, "Maria", "Omar")
print(maria_omar_message)

